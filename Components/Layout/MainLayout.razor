@inherits LayoutComponentBase
@inject AuthService Auth
@inject NavigationManager Nav
@using System.Net.Http
@inject HttpClient Http
@* @rendermode InteractiveServer *@

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://tersorasora.github.io/kenton-portfolio" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @if (isChecking)
            {
                <p>Checking authentication...</p>
            }
            else if (!isAuthenticated)
            {
                @* Redirecting to login *@
                Nav.NavigateTo("/login", forceLoad: true);
            }
            else
            {
                @Body
            }
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>


@code {
    private string nickname = "Guest";
    private bool isAuthenticated;
    private bool isChecking = true;

    private async Task FetchNickname(){
        try{
            var response = await Http.GetAsync("user/nickname");
            if (response.IsSuccessStatusCode)
            {
                nickname = await response.Content.ReadAsStringAsync();
            }
            else
            {
                nickname = "Guest";
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching nickname: {ex.Message}");
            nickname = "Guest";
        }
    }

    protected override async Task OnInitializedAsync()
    {
        isAuthenticated = await Auth.IsAuthenticatedAsync();
        isChecking = false;
    }
}